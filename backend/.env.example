# Copy to `.env` and fill values (never commit real secrets)

# --- Email (recommended: Resend API) ---
# EMAIL_PROVIDER can be: resend | smtp | gmail
# If omitted, backend auto-picks: RESEND_API_KEY -> resend, SMTP_HOST -> smtp, else EMAIL_SERVICE+APP_PASSWORD -> gmail
EMAIL_PROVIDER=resend

# Resend (API-based, deployment-friendly)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM="TaskMaster <onboarding@resend.dev>"

# --- SMTP (generic) ---
#EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM="TaskMaster <no-reply@example.com>"

# --- Gmail SMTP (Nodemailer) ---
#EMAIL_PROVIDER=gmail
EMAIL_SERVICE=your_gmail_address@gmail.com
APP_PASSWORD=your_gmail_app_password
EMAIL_FROM="TaskMaster <your_gmail_address@gmail.com>"

